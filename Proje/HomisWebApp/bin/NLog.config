<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <!-- 
  See https://github.com/nlog/nlog/wiki/Configuration-file 
  for information on customizing logging rules and outputs.
   -->
  <targets async="true">

    <target xsi:type="ColoredConsole" name="console" useDefaultRowHighlightingRules="true"
            layout="${time} [${uppercase:${level}}] ${message}" >

      <highlight-word foregroundColor="DarkRed" regex="\[(.*?)\]"></highlight-word>
      <highlight-word foregroundColor="DarkYellow" regex="\((.*?)\)"></highlight-word>
    </target>

    <!--[${logger}] [${uppercase:${level}}]-->
    <target name="performanceFile" xsi:type="File"
            layout="[URL] ${longdate} ${message}"
            fileName="c:/temp/${shortdate}.log"
            archiveFileName="c:/temp/log.{#}.txt"
            encoding="utf-8"
            createDirs="true"
            keepFileOpen="true"
            archiveEvery="Day"
            archiveNumbering="Date"
            maxArchiveFiles="7"
            concurrentWrites="false"
            />

  </targets>

  <rules>
    <!-- add your logging rules here -->

    <logger name="*" minlevel="Trace" writeTo="performanceFile" final="true" />
  </rules>
</nlog>
